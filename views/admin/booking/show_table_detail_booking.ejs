<!-- DataTables -->
<div class="card shadow mb-4 mt-2">
  <div class="card-header py-3">
    <a href="/admin/booking" class="btn btn-warning">Back</a>
  </div>
  <div class="card-body">
    <div class="row">
      <div class="col-md-4">
        <img src="/<%= booking.payments.proofPayment %>" alt="image item" style="width: 100%; display: block">
      </div>
      <div class="col-md-8">
        <div class="table-responsive">
          <table class="table table-bordered" width="100%" cellspacing="0">
            <thead>
              <tr>
                <th>Member Name</th>
                <th>Total</th>
                <th>Bank From</th>
                <th>Item Name</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td><%= booking.memberId.firstName %> <%= booking.memberId.lastName %></td>
                <td>$<%= booking.total %></td>
                <td><%= booking.payments.bankFrom %></td>
                <td><%= booking.itemId.title %></td>
              </tr>
            </tbody>
          </table>
        </div>
        <% if (booking.payments.status === 'Proses') { %>
          <div class="row mt-3 justify-content-end">
            <form action="/admin/booking/<%= booking._id %>/reject?_method=PUT" method="POST" class="mr-1">
              <button type="submit" class="btn btn-danger">
                <i class="fas fa-times"></i>
                <span>Reject</span>
              </button>
            </form>
            <form action="/admin/booking/<%= booking._id %>/confirmation?_method=PUT" method="POST">
              <button type="submit" class="btn btn-success">
                <i class="fas fa-check"></i>
                <span>Confirmation</span>
              </button>
            </form>
          </div>
        <% } %>
      </div>
    </div>
  </div>
</div>
<!-- End DataTables -->
