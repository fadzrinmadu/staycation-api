<!-- Modal -->
<div class="modal fade" id="activityEditModal" tabindex="-1" aria-labelledby="editModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="editModalLabel">Edit Feature</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <form action="/admin/item/detail/edit-activity?_method=PUT" method="POST" enctype="multipart/form-data">
        <div class="modal-body">
          <div class="form-group">
            <label for="name">Activity Name</label>
            <input type="text" class="form-control" name="name" id="activityNameInput" placeholder="Enter activity name" required>
          </div>
          <div class="form-group">
            <label for="name">Type</label>
            <input type="text" class="form-control" name="type" id="activityTypeInput" placeholder="Enter type" required>
          </div>
          <div class="form-group">
            <label for="name">Image</label>
            <input type="file" class="form-control" name="image" id="activityImageInput">
            <span>Choose new image</span>
          </div>
        </div>
        <div class="modal-footer">
          <input type="hidden" name="id" id="activityIdInput">
          <input type="hidden" name="itemId" value="<%= itemId %>">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <button type="submit" class="btn btn-primary">Edit</button>
        </div>
      </form>
    </div>
  </div>
</div>
