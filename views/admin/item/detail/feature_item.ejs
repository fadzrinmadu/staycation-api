<div class="tab-pane fade show active" id="show-feature" role="tabpanel" aria-labelledby="show-feature-tab">
  <!-- DataTables -->
  <div class="card shadow mb-4 mt-2">
    <div class="card-body">
      <div class="row">
        <div class="col-md-5">
          <form action="/admin/item/detail/add-feature" method="POST" enctype="multipart/form-data">
            <div class="form-group">
              <label for="name">Feature Name</label>
              <input type="text" class="form-control" name="name" placeholder="Enter feature name" required>
            </div>
            <div class="form-group">
              <label for="name">QTY</label>
              <input type="number" class="form-control" name="qty" placeholder="Enter qty" required>
            </div>
            <div class="form-group">
              <label for="name">Image</label>
              <input type="file" class="form-control" name="image" required>
            </div>
            <input type="hidden" name="itemId" value="<%= itemId %>">
            <button type="submit" class="btn btn-primary">Add</button>
          </form>
        </div>
        <div class="col-md-7">
          <div class="table-responsive">
            <table class="table table-bordered" id="dataTableFeature" width="100%" cellspacing="0">
              <thead>
                <tr>
                  <th>No</th>
                  <th>Name</th>
                  <th>Qty</th>
                  <th>Image</th>
                  <th class="text-center">Action</th>
                </tr>
              </thead>
              <tbody>
                <% features.forEach((feature, index) => { %>
                  <tr>
                    <th><%= ++index %></th>
                    <th><%= feature.name %></th>
                    <th><%= feature.qty %></th>
                    <th>
                      <img src="/<%= feature.imageUrl %>" alt="<%= feature.name %>" width="70">
                    </th>
                    <th class="text-center">
                      <form action="/admin/item/detail/feature/<%= itemId %>/<%= feature._id %>?_method=DELETE" method="POST">
                        <a href="#" class="btn btn-sm btn-warning btn-edit-feature mr-1" 
                          data-toggle="modal" 
                          data-target="#featureEditModal" 
                          data-id="<%= feature._id %>" 
                          data-name="<%= feature.name %>" 
                          data-qty="<%= feature.qty %>"
                        >
                          <i class="fas fa-edit"></i>
                        </a>
                        <button type="submit" class="btn btn-sm btn-danger">
                          <i class="fas fa-trash"></i>
                        </button>
                      </form>
                    </th>
                  </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- End DataTables -->
</div>

