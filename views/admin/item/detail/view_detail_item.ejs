<%- include('../../../partials/header.ejs') %>

<!-- Page Wrapper -->
<div id="wrapper">

  <%- include('../../../partials/sidebar.ejs') %>

  <!-- Content Wrapper -->
  <div id="content-wrapper" class="d-flex flex-column">

    <!-- Main Content -->
    <div id="content">

      <%- include('../../../partials/navbar.ejs') %>

      <!-- Begin Page Content -->
      <div class="container-fluid">

        <%- include('../../../partials/message.ejs') %>

        <!-- Page Heading -->
        <h1 class="h3 mb-4 text-gray-800">Detail Item</h1>

        <ul class="nav nav-tabs" id="myTab" role="tablist">
          <li class="nav-item" role="presentation">
            <a class="nav-link active" id="show-feature-tab" data-toggle="tab" href="#show-feature" role="tab" aria-controls="show-feature" aria-selected="true">Show Feature</a>
          </li>
          <li class="nav-item" role="presentation">
            <a class="nav-link" id="show-activity-tab" data-toggle="tab" href="#show-activity" role="tab" aria-controls="show-activity" aria-selected="false">Show Activity</a>
          </li>
        </ul>
        <div class="tab-content" id="myTabContent">
          <%- include('feature_item.ejs') %>
          <%- include('activity_item.ejs') %>
        </div>
      </div>
      <!-- /.container-fluid -->

    </div>
    <!-- End of Main Content -->

    <%- include('../../../partials/footer.ejs') %>

  </div>
  <!-- End of Content Wrapper -->

</div>
<!-- End of Page Wrapper -->

<!-- Scroll to Top Button-->
<a class="scroll-to-top rounded" href="#page-top">
  <i class="fas fa-angle-up"></i>
</a>

<%- include('../../../partials/logout_modal.ejs') %>
<%- include('feature_edit_modal.ejs') %>
<%- include('activity_edit_modal.ejs') %>

<%- include('../../../partials/script.ejs') %>
<script>
  $(document).ready(function() {
    $('#dataTableActivity').DataTable();
    $('#dataTableFeature').DataTable();
  });

  $('.btn-edit-feature').on('click', function() {
    const id = $(this).data('id');
    const name = $(this).data('name');
    const qty = $(this).data('qty');

    $('#featureIdInput').val(id);
    $('#featureNameInput').val(name);
    $('#featureQtyInput').val(qty);
  });

  $('.btn-edit-activity').on('click', function() {
    const id = $(this).data('id');
    const name = $(this).data('name');
    const type = $(this).data('type');

    $('#activityIdInput').val(id);
    $('#activityNameInput').val(name);
    $('#activityTypeInput').val(type);
  });
</script>
