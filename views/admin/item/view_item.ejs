<%- include('../../partials/header.ejs') %>

<!-- Page Wrapper -->
<div id="wrapper">

  <%- include('../../partials/sidebar.ejs') %>

  <!-- Content Wrapper -->
  <div id="content-wrapper" class="d-flex flex-column">

    <!-- Main Content -->
    <div id="content">

      <%- include('../../partials/navbar.ejs') %>

      <!-- Begin Page Content -->
      <div class="container-fluid">

        <%- include('../../partials/message.ejs') %>

        <!-- Page Heading -->
        <h1 class="h3 mb-4 text-gray-800">Item</h1>

        <% if (action === 'view') { %>
          <ul class="nav nav-tabs" id="myTab" role="tablist">
            <li class="nav-item" role="presentation">
              <a class="nav-link active" id="show-item-tab" data-toggle="tab" href="#show-item" role="tab" aria-controls="show-item" aria-selected="true">Show Item</a>
            </li>
            <li class="nav-item" role="presentation">
              <a class="nav-link" id="add-item-tab" data-toggle="tab" href="#add-item" role="tab" aria-controls="add-item" aria-selected="false">Add Item</a>
            </li>
          </ul>
          <div class="tab-content" id="myTabContent">
            <%- include('table_item.ejs') %>
            <%- include('add_item.ejs') %>
          </div>
        <% } else if (action === 'show image') { %>
          <ul class="nav nav-tabs" id="myTab" role="tablist">
            <li class="nav-item" role="presentation">
              <a class="nav-link active" id="show-image-tab" data-toggle="tab" href="#show-image" role="tab" aria-controls="show-image" aria-selected="true">Show Image</a>
            </li>
          </ul>
          <div class="tab-content" id="myTabContent">
            <%- include('show_image_item.ejs') %>
          </div>
        <% } else if (action === 'edit') { %>
          <ul class="nav nav-tabs" id="myTab" role="tablist">
            <li class="nav-item" role="presentation">
              <a class="nav-link active" id="edit-item-tab" data-toggle="tab" href="#edit-item" role="tab" aria-controls="edit-item" aria-selected="true">Edit Item</a>
            </li>
          </ul>
          <div class="tab-content" id="myTabContent">
            <%- include('edit_item.ejs') %>
          </div>
        <% } %>

      </div>
      <!-- /.container-fluid -->

    </div>
    <!-- End of Main Content -->

    <%- include('../../partials/footer.ejs') %>

  </div>
  <!-- End of Content Wrapper -->

</div>
<!-- End of Page Wrapper -->

<!-- Scroll to Top Button-->
<a class="scroll-to-top rounded" href="#page-top">
  <i class="fas fa-angle-up"></i>
</a>

<%- include('../../partials/logout_modal.ejs') %>

<%- include('../../partials/script.ejs') %>

<script>
  CKEDITOR.replace('descriptionItem');
</script>
